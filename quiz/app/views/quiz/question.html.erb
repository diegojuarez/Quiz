<h1>Pregunta <%=@current + 1 %> de <%= @total %></h1>
<p id="question"><%= @question.text %></p>

<%= form_tag({:controller => 'quiz', :action => 'answer'}) do%>
<% @choices.each do |choice| %>
<p class="choice">
  <%= radio_button_tag(:choice, choice.id) %>
  <%= label_tag('choice_'.contact(choice.id.to_s).to_sym,choice.text) %>
</p>
<%end%>
<div class="center">
  <%= submit_tag('Continue', :class => 'submmit') %>
</div>
<%end%>
<% content_for(:title) do %>
  Pregunta <%= @current +1 %> de <%=@total%>
<%end%>